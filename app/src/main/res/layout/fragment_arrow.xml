<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ArrowFragment">

    <TextView
        android:id="@+id/heading_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        style="@style/HeaderText"
        android:text="@string/init_heading_destination" />

    <TextView
        android:id="@+id/heading_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heading_destination"
        android:layout_marginBottom="5dp"
        style="@style/HeaderText"
        android:text="@string/init_heading_distance" />

    <TextView
        android:id="@+id/heading_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heading_distance"
        android:layout_marginBottom="20dp"
        style="@style/HeaderText"
        android:text="@string/init_heading_direction"/>

    <ImageView
        android:id="@+id/pointer_arrow"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_below="@+id/heading_direction"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow" />

    <Button
        android:id="@+id/arrival_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pointer_arrow"
        android:layout_marginTop="40dp"
        android:text="@string/arrival_button" />

    <TextView
        android:id="@+id/footer_attribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/attribution_hyperlink"
        style="@style/FooterText"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>